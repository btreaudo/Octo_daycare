      </div>
      <div class="field">
        <%= f.label :breed_id %><br>
        <%= f.collection_select :breed_id, Breed.all, :id, :breed, {prompt: "Select a breed"}, {class: "form-control"} %>
      </div>
      <div class="field">
        <%# TODO: change %>
        <%= f.label "Date of Birth" %><br>
        <%= f.date_select :dob, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :vet_name %><br>
        <%= f.text_field :vet_name, class: "form-control" %>
      </div>
        <div class="field">
        <%= f.label :vet_phone %><br>
        <%= f.text_field :vet_phone, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :in_daycare %><br>
        <%= f.check_box :in_daycare %>
      </div>
      <div class="field">
      <%= f.label :avatar %><br>
      <%= f.file_field :avatar %>
      </div>

      <div class="actions">
        <%= f.submit class: "btn btn-success" %>
      </div>
    <% end %>
