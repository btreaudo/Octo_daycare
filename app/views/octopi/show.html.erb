

<p>
  <strong>Name:</strong>
  <%= @octopus.name %>
</p>

<p>
  <strong>Owner:</strong>
  <%= @octopus.owner.first_name + " " + @octopus.owner.last_name %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @octopus.breed.breed %>
</p>

<p>
  <strong>Dob:</strong>
  <%= @octopus.dob.stamp("March 22, 1992") %>
</p>

<p>
  <strong>Vet name:</strong>
  <%= @octopus.vet_name %>
</p>

<p>
  <strong>Vet phone:</strong>
  <%= @octopus.vet_phone %>
</p>

<p>
  <strong>In daycare:</strong>
  <%= @octopus.in_daycare %>
</p>

<p>
<%= image_tag @octopus.avatar.url %>
<%= image_tag @octopus.avatar.url(:medium) %>
<%= image_tag @octopus.avatar.url(:thumb) %>
</p>

<%= link_to 'Edit', edit_octopus_path(@octopus), class: "btn btn-warning" %>
<%= link_to 'Back', octopi_path, class: "btn btn-primary" %>
