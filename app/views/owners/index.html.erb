

<h1>Octopi Owners</h1>

<%= form_tag("/owners", method: "get", role: "search", class: "form-inline") do %>
 <div class="form-group">
   <%= text_field_tag(:search_owner, nil, placeholder: "Smith", class: "form-control") %>
 </div>
 <%= submit_tag("Search", class: "btn btn-primary") %>
<% end %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Last name</th>
      <th>First name</th>
      <th>Phoneemail</th>
      <th>Emergency phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.last_name %></td>
        <td><%= owner.first_name %></td>
        <td><%= owner.phoneemail %></td>
        <td><%= owner.emergency_phone %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Owner', new_owner_path, class: "btn btn-success" %>
